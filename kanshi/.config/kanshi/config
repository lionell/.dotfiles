profile lid-open {
	output DP-2 mode 3840x2160@60Hz position 0,0 transform 270
	output DP-3 mode 3840x2160@60Hz position 2160,600
	output eDP-1 mode 3840x2400@60Hz position 6000,2760 scale 2
}

profile lid-closed {
	output DP-2 mode 3840x2160@60Hz position 0,0 transform 270
	output DP-3 mode 3840x2160@60Hz position 2160,600
}

profile standalone {
	output eDP-1 mode 3840x2400@60Hz scale 2
}
